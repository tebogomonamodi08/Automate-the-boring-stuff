def find_number(string):
    '''This function checks if the input is a canadian number or not.'''
    if len(string)!=12:
        return False
    for i in range(0, 3):
        if not string[i].isdecimal():
            return False
    if string[3] is not '-':
        return False
    for i in range(4, 7):
        if not string[i].isdecimal():
            return False
    if string[7]!='-':
        return False
    for i in range(8, 12):
        if not string[i].isdecimal:
            return False
    return True

def main():
    print('Enter a number so that we can evaluate it and check whether it is a cnadian number or not')
    number = '333-112-2356'
    if find_number(number):
        print('Yes it is.')
    else:
        print('It is not')

if __name__ == '__main__':
    main()